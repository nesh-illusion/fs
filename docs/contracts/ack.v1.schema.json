{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lucius.local/schemas/ack.v1.schema.json",
  "title": "LUCIUS ACK Callback v1",
  "type": "object",
  "required": [
    "jobId",
    "stepId",
    "attempt_no",
    "lease_id",
    "status",
    "timestamp"
  ],
  "properties": {
    "jobId": {
      "type": "string",
      "minLength": 1
    },
    "stepId": {
      "type": "string",
      "minLength": 1
    },
    "tenant_id": {
      "type": "string",
      "minLength": 1
    },
    "attempt_no": {
      "type": "integer",
      "minimum": 1
    },
    "lease_id": {
      "type": "string",
      "format": "uuid"
    },
    "status": {
      "type": "string",
      "enum": ["ACKED"]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "correlation_id": {
      "type": "string",
      "minLength": 1
    },
    "traceparent": {
      "type": "string",
      "minLength": 1
    }
  },
  "additionalProperties": true
}
