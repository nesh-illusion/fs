{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lucius.local/schemas/directive.v1.schema.json",
  "title": "LUCIUS Directive v1",
  "type": "object",
  "required": [
    "jobId",
    "tenant_id",
    "stepId",
    "protocol_id",
    "step_type",
    "attempt_no",
    "lease_id",
    "input_ref",
    "workspace_ref",
    "output_ref",
    "payload",
    "callback_urls"
  ],
  "properties": {
    "jobId": {
      "type": "string",
      "minLength": 1
    },
    "tenant_id": {
      "type": "string",
      "minLength": 1
    },
    "stepId": {
      "type": "string",
      "minLength": 1
    },
    "protocol_id": {
      "type": "string",
      "minLength": 1
    },
    "step_type": {
      "type": "string",
      "minLength": 1
    },
    "attempt_no": {
      "type": "integer",
      "minimum": 1
    },
    "lease_id": {
      "type": "string",
      "format": "uuid"
    },
    "input_ref": {
      "$ref": "#/$defs/ref"
    },
    "workspace_ref": {
      "$ref": "#/$defs/ref"
    },
    "output_ref": {
      "$ref": "#/$defs/ref"
    },
    "payload": {
      "type": "object"
    },
    "correlation_id": {
      "type": "string",
      "minLength": 1
    },
    "traceparent": {
      "type": "string",
      "minLength": 1
    },
    "callback_urls": {
      "type": "object",
      "required": ["ack", "result"],
      "properties": {
        "ack": {
          "type": "string",
          "minLength": 1
        },
        "result": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": true
    }
  },
  "$defs": {
    "ref": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 1
        },
        {
          "type": "object",
          "required": ["uri"],
          "properties": {
            "uri": {
              "type": "string",
              "minLength": 1
            },
            "checksum": {
              "type": "string",
              "minLength": 1
            },
            "size_bytes": {
              "type": "integer",
              "minimum": 0
            },
            "content_type": {
              "type": "string",
              "minLength": 1
            },
            "metadata": {
              "type": "object"
            }
          },
          "additionalProperties": true
        }
      ]
    }
  },
  "additionalProperties": true
}
