{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lucius.local/schemas/result.v1.schema.json",
  "title": "LUCIUS Result Callback v1",
  "type": "object",
  "required": [
    "jobId",
    "stepId",
    "attempt_no",
    "lease_id",
    "status",
    "timestamp"
  ],
  "properties": {
    "jobId": {
      "type": "string",
      "minLength": 1
    },
    "stepId": {
      "type": "string",
      "minLength": 1
    },
    "tenant_id": {
      "type": "string",
      "minLength": 1
    },
    "attempt_no": {
      "type": "integer",
      "minimum": 1
    },
    "lease_id": {
      "type": "string",
      "format": "uuid"
    },
    "status": {
      "type": "string",
      "enum": ["SUCCEEDED", "FAILED"]
    },
    "failure_class": {
      "type": "string",
      "enum": ["RETRYABLE", "NON_RETRYABLE"]
    },
    "error": {
      "type": "object",
      "properties": {
        "code": {
          "type": "string",
          "minLength": 1
        },
        "message": {
          "type": "string",
          "minLength": 1
        },
        "details": {
          "type": "object"
        }
      },
      "additionalProperties": true
    },
    "output_ref": {
      "$ref": "#/$defs/ref"
    },
    "workspace_ref": {
      "$ref": "#/$defs/ref"
    },
    "artifact_refs": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/ref"
      }
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "correlation_id": {
      "type": "string",
      "minLength": 1
    },
    "traceparent": {
      "type": "string",
      "minLength": 1
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "status": {"const": "FAILED"}
        }
      },
      "then": {
        "required": ["failure_class", "error"]
      }
    }
  ],
  "$defs": {
    "ref": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 1
        },
        {
          "type": "object",
          "required": ["uri"],
          "properties": {
            "uri": {
              "type": "string",
              "minLength": 1
            },
            "checksum": {
              "type": "string",
              "minLength": 1
            },
            "size_bytes": {
              "type": "integer",
              "minimum": 0
            },
            "content_type": {
              "type": "string",
              "minLength": 1
            },
            "metadata": {
              "type": "object"
            }
          },
          "additionalProperties": true
        }
      ]
    }
  },
  "additionalProperties": true
}
