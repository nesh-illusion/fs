{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lucius.local/schemas/steps/embedding.v1.json",
  "title": "Embedding Step Payload v1",
  "type": "object",
  "properties": {
    "model": {
      "type": "string",
      "minLength": 1
    },
    "chunking": {
      "type": "object",
      "properties": {
        "strategy": {
          "type": "string",
          "minLength": 1
        },
        "max_tokens": {
          "type": "integer",
          "minimum": 1
        },
        "overlap_tokens": {
          "type": "integer",
          "minimum": 0
        }
      },
      "additionalProperties": true
    },
    "normalize": {
      "type": "boolean"
    }
  },
  "additionalProperties": true
}
